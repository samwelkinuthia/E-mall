<div class="container-fluid room">
  <div class="row room_header">
    <h1>Welcome to the
      <span><%=@room.name%></span>
    </h1>
  </div>
  <div class="row room_description">
    <p><%= @room.description %></p>
  </div>
  <div class="container">
    <div class="row room_products">
      <h1>Our Poducts</h1>
      <%@products.each do |product|%>
      <div class="col-md-4 product_tile">
        <img src="<%=product.image%>" class="img-responsive">
        <h3><%=product.name%></h3>
        <h5><%=product.price%>
          Ksh</h5>
        <%=link_to mall_room_product_path(@mall, @room,product) do%>
        <button class="btn btn-success">View</button>
        <%end%>
      </div>
      <%end%>
    </div>
  </div>

  <div class="row room_details">
    <div class="col-md-6 col-xs-12">
      <i class="fa fa-clock-o" id="room_time_icon" aria-hidden="true"></i>
      <h3><%= @room.opening_time.strftime('%H:%M:%p') %></h3>
      -
      <h3><%=@room.closing_time.strftime('%H:%M:%p')%></h3>
    </div>
    <div class="col-md-6 col-xs-12">
      <%=image_tag @room.storeavatar_url, class: "img-responsive animated swing"%>
    </div>
  </div>

  <div class="row room_directions">
    <p><%=@room.name%>
      is located on the
      <%if @room.floor == 1%>
      <b>1st</b>
      <%elsif @room.floor == 2%>
      <h5>2nd</h5>
      <%elsif @room.floor == 3%>
      <h5>3rd</h5>
      <%elsif @room.floor >= 4%>
      <h5><%=@room.floor%>th</h5>
      <%end%>
      of
      <%=@room.mall.name%>,
      <%=@room.wing%>
      wing in room number
      <%=@room.room_number%>
    </p>
  </div>

  <div class="row room_contacts">
    <a href="<%=@room.facebook%>">
      <i class="fa fa-facebook-official contact_icon" aria-hidden="true"></i>
    </a>
    <a href="<%=@room.instagram%>">
      <i class="fa fa-instagram contact_icon" aria-hidden="true"></i>
    </a>
    <a href="<%=@room.website%>">
      <i class="fa fa-internet-explorer contact_icon" aria-hidden="true"></i>
    </a>
    <a href="<%@room.twitter%>">
      <i class="fa fa-twitter contact_icon" aria-hidden="true"></i>
    </a>

    <br>

    <p><%=@room.phone%></p>
    <p><%=@room.email%></p>
  </div>
</div>
