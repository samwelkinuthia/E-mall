<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<div class="mall_header">
  <h1 class="animated bounceInDown">E-mall</h1>
  <h4>Categories</h4>
  <% @categories.each do |category| %>
  <p>
    <%= link_to category.name, category %>
    <i class="fa fa-external-link" aria-hidden="true"></i>
    <br>
  </p>
  <% end %>
</div>

<div class="malls">
  <div class="malls_title">
    <h1>Malls</h1>
  </div>
</div>

<% @malls.each do |mall| %>
<div class="row malls_loop">
  <div class="col-md-6 col-xs-12 left animated fadeInLeft">
    <%= image_tag mall.mallpicture_url.to_s, class: "img-responsive"%>
  </div>

  <div class="col-md-6 col-xs-12 right animated fadeInRight">
    <h1><%=mall.name%></h1>
    <%if ((mall.opening_time).strftime('%H:%M')..(mall.closing_time).strftime('%H:%M')).include?Time.now.strftime('%H:%M')%>
    <div>
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ab/Green_pog.svg/1024px-Green_pog.svg.png" class="img-responsive" style="height:30px; width:30px;">Open
    </div>
    <%=link_to mall_events_path(mall) do%>
    <%=mall.events.count%>
    Events happening
    <%end%>
    <%else%>
    <div>
      <img src="http://designingflicks.com/images/red-svg-9.png" class="img-responsive" style="height:30px; width:30px; margin:auto; text-align:center;">
      <h1>Closed</h1>
    </div>
    <%end%>

    <%if mall.parking_space == true%>
    <p>parking available</p>
    <%else%>
    <p>No parking provided</p>
    <%end%>

    <%if mall.rooms_status == true%>
    <%=mall.rooms.count%>
    stores present.
    <%else%>
    <h3>fully occupied</h3>
    <%end%>
    <br>

    <%=link_to mall_path(mall) do%>
    <button class="btn btn-primary">View</button>
    <%end%>

    <%#= link_to 'Destroy', mall, method: :delete, data: { confirm: 'Are you sure?' } %>

  </div>
</div>
<% end %>

<%#= link_to 'Edit', edit_mall_path(mall) %>
<%#= link_to 'New Mall', new_mall_path %>

<br>

<div class="map_box">
  <div id="map" class="img-responsive"></div>
</div>
