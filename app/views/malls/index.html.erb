<script src="//maps.google.com/maps/api/js?key=AIzaSyDoCKNEr65ZO2JvpuIbofP7cn8p3pqFJP4"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<!--MALLS-->
<div class="malls">
  <div class="malls_title">
    <h1 class="animated bounceInDown">MALLS</h1>
  </div>
</div>
<!--MALLS LIST-->
<% @malls.each do |mall| %>
<div class="row malls_loop">
  <!--MALL IMAGE-->
  <div class="col-md-7 col-xs-12 left animated fadeInLeft">
    <%= image_tag mall.mallpicture_url.to_s, class: "img-responsive", style:"width:100%;height:450px;"%>
  </div>

<!--MALL DETAILS-->
  <div class="col-md-5 col-xs-12 right animated fadeInRight mall-details">
    <h1><%=mall.name%></h1>
    <hr style="font-size: 50px; color: #0E2945;height: 20px;border-top: 2px solid #0E2945">
    <%if ((mall.opening_time).strftime('%H:%M')..(mall.closing_time).strftime('%H:%M')).include?Time.now.strftime('%H:%M')%>
    <div>
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ab/Green_pog.svg/1024px-Green_pog.svg.png" class="img-responsive" style="height:30px; width:30px;margin: auto;">&nbsp;OPEN
    </div>
    <br>
    <%=link_to mall_events_path(mall) do%>
    <i class="fa fa-calendar" aria-hidden="true">&nbsp;Events: </i><%=mall.events.count%>
    <br>
    <%end%>
    <%else%>
    <div>
      <img src="http://designingflicks.com/images/red-svg-9.png" class="img-responsive" style="height:30px; width:30px; margin:auto;">&nbsp;Closed
    </div>
    <%end%>

    <%if mall.parking_space == true%>
    <p><i class="fa fa-car" aria-hidden="true"></i> Available Parking </p>
    <%else%>
    <p><i class="fa fa-car" aria-hidden="true"></i> No Parking Provided</p>
    <%end%>

    <%if mall.rooms_status == true%>
    <i class="fa fa-home" aria-hidden="true"></i> <%=mall.rooms.count%> Stores present
    <%else%>
    <h3>Fully occupied</h3>
    <%end%>
    <br>
    <br>
    <%=link_to mall_path(mall) do%>
    <button class="btn btn-primary" style="padding: 15px 40px; background-color: #0E2945"><h4>View Mall</h4></button>
    <%end%>
  </div>
</div>
<% end %>
<br>

<div class="map_box">
  <div id="map" class="img-responsive"></div>
</div>
