<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :date_attribute, :as :datepicker %>
  <%= f.input :venue %>
  <%= f.input :hosted_by %>
  <%= f.input :time %>
  </div>

  <div class="form-actions">
  <%= f.button :submit %>
  </div>
<% end %>
